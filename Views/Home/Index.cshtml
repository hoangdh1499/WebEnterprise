@model IEnumerable<WebEnterprise.Models.Topic>  

@{
    ViewBag.Title = "Home Page";
}

<head>
    <meta charset="utf-8">
    <title>university magazine</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"></script>
    <link rel="stylesheet" href="~/Content/magazine-style.css">
</head>

<body>
    <div class="container-fluid">
        <div class="jumbotron">
            <h1>GREENWICH VIET NAM MAGAZINE</h1>
            <p class="lead">Here we allow all students to post content that students love to share with everyone and together contribute and evaluate the content.</p>
            <p><a href="https://cms.greenwich.edu.vn/" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
        </div>
        <div class="slider-carousel">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Content/images/Greenwich1.png" alt="Greenwich UK" style="width:100%;">
                        <div class="carousel-caption">
                            <h3>Greenwich UK</h3>
                            <p>"Wisdom is not a product from school, but a lifelong learning process."</p>
                        </div>
                    </div>

                    <div class="item">
                        <img src="~/Content/images/Greenwich2.png" alt="Greenwich UK" style="width:100%;">
                        <div class="carousel-caption">
                            <h3>Greenwich UK</h3>
                            <p>"Your time is limited, so don't waste it living someone else's life"</p>
                        </div>
                    </div>

                    <div class="item">
                        <img src="~/Content/images/Greenwich3.jpg" alt="Greenwich UK" style="width:100%;">
                        <div class="carousel-caption">
                            <h3>Greenwich UK</h3>
                            <p>"Wisdom is not a product from school, but a lifelong learning process."</p>
                        </div>
                    </div>
                </div>
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>


    <section>
        <div class="container-fluid">
            <h2>Latest news</h2>
            <div class="card-deck">
                @foreach (var item in Model)
                {
                    <div class="card text-center col-xs-12 col-md-4">
                        <img src="https://img.freepik.com/free-vector/magazine-with-branding-ideas_53876-85112.jpg?size=626&ext=jpg&ga=GA1.2.1030426669.1618099200" class="card-img-top align-items-center" style="max-width:200px;max-height:100px" alt="Book">
                        <div class="card-body">
                            <h3 class="card-title">@Html.DisplayFor(modelItem => item.TopicID)</h3>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.TopicName)</p>
                            <p class="card-text btn btn-info">@Html.ActionLink("More. . .", "ViewTopic", "ContentAssign", new { id = item.TopicID }, new { @style = "color:black" })</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</body>