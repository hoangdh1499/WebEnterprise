@model IEnumerable<WebEnterprise.Models.MarketingManager>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <title>university magazine</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"></script>
    <link rel="stylesheet" href="~/Content/table.css">
</head>

<body>
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MMName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MMAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MMEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MMPhone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th></th>
                </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MMName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MMAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MMEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MMPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>

                            @Html.ActionLink("Details", "Details", new { id = item.MMID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.MMID })
                        </td>
                    </tr>
                }

        </table>
        </div>
</body>