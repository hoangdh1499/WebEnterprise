@model WebEnterprise.Models.Topic

<head>
    <meta charset="utf-8">
    <title>university magazine</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="~/Content/edit.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"></script>
</head>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-style-3">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form>
                <fieldset>
                    <legend>Topic</legend>
                    <label for="field1">
                        <span>Faculty<span class="required">*</span></span>
                        @Html.DropDownList("FacultyID", null, htmlAttributes: new { @class = "form-control" })
                    </label>
                    <label for="field2">
                        <span>Term<span class="required">*</span></span>
                        @Html.EditorFor(model => model.TopicID, new { htmlAttributes = new { @class = "form-control" } })
                    </label>
                    <label for="field3">
                        <span>Topic<span class="required">*</span></span>
                        @Html.EditorFor(model => model.TopicName, new { htmlAttributes = new { @class = "form-control" } })
                    </label>
                    <label for="field3">
                        <span>Description<span class="required">*</span></span>
                        @Html.EditorFor(model => model.TopicDescription, new { htmlAttributes = new { @class = "form-control" } })
                    </label>
                    <label for="field3">
                        <span>Start Date<span class="required">*</span></span>
                        @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                    </label>
                    <label for="field3">
                        <span>End Date<span class="required">*</span></span>
                        @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })
                    </label>
                    
                </fieldset>
                <div class="form-group">
                     <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Edit" class="btn btn-default" />
                     </div>
                </div>
            </form>
        </div>
        {
            if (TempData["message"] != null)
            {
                <script type="text/javascript">
        alert(@Html.Raw(Json.Encode(TempData["message"])));
                </script>
            }
        }
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</body>